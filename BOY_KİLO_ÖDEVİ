
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace boy_kilo_odev
{
    class Program
    {
        static void Main(string[] args)
        {
            int kilo, boy;
            Console.WriteLine("kilonuzu yazınız");
            kilo = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("boyunuzu giriniz");
            boy = kilo % 100;
            if(boy-kilo>11)
            
            {
                Console.WriteLine("kilo almanız gerekiyor");
            }
            if(boy-kilo==11)

            {
                Console.WriteLine("kilonuz ideal");
            }
            else

            {
                Console.WriteLine("kilo vermeniz gerekli");
            }
            Console.ReadKey();
        }
    }
}
